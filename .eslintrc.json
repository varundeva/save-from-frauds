{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:tailwindcss/recommended"
  ],
  "rules": {
    // don't allow console.log statements and only allow info, warn and error logs
    "no-console": [
      "error",
      {
        "allow": [
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "tailwindcss/classnames-order": "error",
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx",
          "*.js"
        ],
        "parser": "@typescript-eslint/parser"
      }
    ]
  }
}